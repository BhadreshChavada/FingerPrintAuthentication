<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fingerAuth.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_finger_print" />

    <Button
        android:id="@+id/default_finger_verification_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="VerifyFinger"
        android:text="Default Finger Verification Dialog"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/full_screen_finger_verification_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="VerifyFinger"
        android:text="Full screen Finger Verification Dialog"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/custome_theme_finger_verification_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="VerifyFinger"
        android:text="Custom theme Finger Verification Dialog"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/custome_theme_full_screen_finger_verification_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="VerifyFinger"
        android:text="Custom theme Full Screen Finger Verification Dialog"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
